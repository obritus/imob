			<div class="row">
				<div class="col-8">
					<h2>Clientes Cadastrados</h2>
				</div>
				<div class="col-4">
					<h2 class="mb-3">Adicionar</h2>
					{{>_msgs}}
					<form action="/admin/clientes/add" method="post">
						<div class="form-group">
							<label for="nome">Nome:</label>
							<input type="text" class="form-control" id="nome" aria-describedby="emailHelp" name="nome">
							<small id="emailHelp" class="form-text text-muted">Nome completo.</small>
						</div>
						<div class="form-group">
							<label for="email">Email:</label>
							<input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email">
							<small id="emailHelp" class="form-text text-muted">O email ser√° usado para fazer login.</small>
						</div>
						<button type="submit" class="btn btn-primary">Cadastrar</button>
					</form>
				</div>
			</div><!-- .row -->

			<script>
				$('form').submit(() => {
					$.ajax({
						method: "POST",
						url: $('form').prop('action'),
						data: {
							nome: $('input[name="nome"]').val(),
							email: $('input[name="email"]').val()
						}
					}).done(function(msg) {
						location.reload()
					})
					return false
				})
			</script>